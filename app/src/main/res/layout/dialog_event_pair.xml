<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_event"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/waffle_blue_02_color"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/margin_content"
    tools:context="com.pomohouse.launcher.activity.pair.EventAlertActivity">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/ivStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/notification_yes" />

    <TextView
        android:id="@+id/tvName"
        style="@style/POMO_TextView_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_content"
        android:gravity="center_horizontal"
        android:textColor="@color/waffle_white_color" />

    <TextView
        android:id="@+id/tvStatus"
        style="@style/POMO_TextView_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_content"
        android:textColor="@color/waffle_white_color" />
</LinearLayout>
