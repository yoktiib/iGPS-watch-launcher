<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/waffle_blue_02_color"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/margin">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/appCompatTextView"
        style="@style/POMO_TextView_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/today" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_content"
        android:gravity="center_horizontal">

        <RelativeLayout
            android:id="@+id/boxBodyStep"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/shape_oval_big_fitness"
            android:padding="8dp">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvStep"
                style="@style/POMO_TextView_Time_Origin_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="@dimen/text_size_big_large"
                android:textColor="@color/waffle_black_color" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvStepUnit"
                style="@style/POMO_TextView_Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvStep"
                android:layout_centerHorizontal="true"
                android:text="@string/text_steps"
                android:textColor="@color/waffle_black_color" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/boxHeadStep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_oval_small_fitness"
            android:padding="20dp">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:srcCompat="@drawable/ic_step" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>
