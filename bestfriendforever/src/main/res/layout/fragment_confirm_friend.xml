<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_bff"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/boxAvatarUrl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_profile"
                android:padding="6dp">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/ivContactAvatar"
                    android:layout_width="94dp"
                    android:layout_height="94dp"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/ivContactAvatarIcon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:visibility="gone"
                app:srcCompat="@drawable/avatar_boy" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tvName"
            style="@style/POMO_TextView_Friend_Confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/btnConfirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/notification_yes" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/notification_no" />
        </LinearLayout>

    </LinearLayout>

    <com.github.silvestrpredko.dotprogressbar.DotProgressBar
        android:id="@+id/dot_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        custom:amount="4"
        custom:animationDirection="left"
        custom:duration="@android:integer/config_mediumAnimTime"
        custom:endColor="@color/waffle_bff"
        custom:startColor="@color/waffle_bff" />
</RelativeLayout>